<body>
    <div class="container">
        <center>
            <img src="https://github.com/bgaby7/medicalg/blob/main/consultas/foto2.png?raw=true" class="float-start" width="550px" height="550px">
            <div class="mt-4 p-5 bg-primary bg-light text-info rounded form">
                <form action="#">
                    <div class="form-header">
                        <div class="title">
                            <h1>CONSULTA:</h1>
                        </div>
                    </div>
                    <br>
                    <div class="input-box">
                        <label for="Nome">Nome:</label>
                        <input type="text" name="Nome" id="Nome" placeholder="Nome Completo" required class="form-control">
                    </div>
                    <div class="input-box">
                        <label for="medico">Médico:</label>
                        <select id="medico" type="text">
                            <option value="AC">Dr.Jorge</option>
                            <option value="AL">Dr.Amanda</option>
                            <option value="AP">Dr.Roberto</option>
                        </select>
                        <script>
                            $(document).ready(function () {
                                $('#estado').select2();
                            });
                        </script>
                    </div>
                    <div class="input-box">
                        <label for="especialidade">Especialidade:</label>
                        <select id="especialidade" type="text">
                            <option value="AC">Gastrentologia(Dr.Manuel)</option>
                            <option value="AL">Odontologia(Dr.Amanda)</option>
                            <option value="AP">Clínico Geral(Dr.Roberto)</option>
                        </select>
                        <script>
                            $(document).ready(function () {
                                $('#estado').select2();
                            });
                        </script>
                    </div>
                    <div class="input-box">
                        <label for="txtData">Data:</label>
                        <input type="date" id="txtData" name="data" class="form-control" min="2023-10-17" required>
                    </div>
                    <div class="input-box">
                        <label for "txtHora">Hora:</label>
                        <input type="time" id="txtHora" name="hora" class="form-control">
                    </div>
                    <div class="continue-button">
                        <button class="btn btn-outline-info">Finalizar</button>
                    </div>
                </form>
            </div>
        </center>
    </div>
</body>
